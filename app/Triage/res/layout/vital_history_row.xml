<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.triage.LoginActivity" >

    <TextView
        android:id="@+id/patientBPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/name_patient"
        android:layout_below="@+id/name_patient"
        android:text = "BP" />

    <TextView
        android:id="@+id/patientTempText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/patientBPText"
        android:layout_below="@+id/patientBPText"
        android:text="Temp" />

    <TextView
        android:id="@+id/patientHRText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/patientTempText"
        android:layout_below="@+id/patientTempText"
        android:text="HR" />

    <TextView
        android:id="@+id/patientSympText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patientTempText"
        android:layout_marginLeft="60dp"
        android:layout_toRightOf="@+id/patientTempText"
        android:text="Symp" />

</RelativeLayout>